<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is PB APP"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:background="#df000000">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            ></TextView>
    </ScrollView>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/discord"></ImageView>
        <TextView
            android:id="@+id/pb_discord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="디스코드 바로가기"
            android:textSize="35sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/uni"></ImageView>
        <TextView
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="학과홈페이지 바로가기"
            android:textSize="35sp">
    </TextView>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/PB"></ImageView>
        <TextView
            android:id="@+id/home_page"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="PB홈페이지 바로가기"
            android:textSize="35sp">
        </TextView>
    </LinearLayout>

</LinearLayout>